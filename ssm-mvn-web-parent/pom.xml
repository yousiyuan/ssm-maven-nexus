	<name>ssm-mvn-web-parent</name>
	<url>http://maven.apache.org</url>

	<modules>
		<module>../ssm-mvn-commons</module>
		<module>../ssm-mvn-entity</module>
		<module>../ssm-mvn-dao</module>
		<module>../ssm-mvn-dao-impl</module>
		<module>../ssm-mvn-service</module>
		<module>../ssm-mvn-service-impl</module>
		<module>../ssm-mvn-web</module>
