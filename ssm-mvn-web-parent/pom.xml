	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.build.jdkVersion>1.8</project.build.jdkVersion>
		<!-- spring版本号 -->
		<spring.version>5.1.1.RELEASE</spring.version>
		<!-- mybatis版本号 -->
